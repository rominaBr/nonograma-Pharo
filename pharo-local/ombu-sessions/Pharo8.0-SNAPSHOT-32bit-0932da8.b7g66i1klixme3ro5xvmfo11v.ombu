OmEntry {	#tags : {		#author : 'Unknown',		#time : DateAndTime [ '2025-11-19T20:07:19.242723-03:00' ],		#prior : OmReference [ 'Pharo8.0-SNAPSHOT-32bit-0932da8.amuj7ovxlmgx1vnd9s50f2q2w', '11' ],		#self : OmReference [ '1' ]	},	#content : EpMethodModification {		#oldMethod : RGMethodDefinition {			#annotations : IdentityDictionary {				#className : #VentanaJuego,				#isMetaSide : false			},			#name : #dibujarJuego,			#protocol : #drawing,			#sourceCode : 'dibujarJuego\r    | dimension tamañoCelda estado1 estado2 anchoVentana vLabel1 pLabel1 panelInfo1 vLabel2 pLabel2 panelInfo2|\r    \r    dimension := partida tablero dimension.\r    \r    "--- CONFIGURACIÓN DE TAMAÑO ---"\r    dimension = 5 ifTrue: [ tamañoCelda := 30 ].\r    dimension = 10 ifTrue: [ tamañoCelda := 25 ].\r    dimension = 15 ifTrue: [ tamañoCelda := 20 ].\r\r    "========================================================"\r    " JUGADOR 1 (Siempre se dibuja en X=0) "\r    "========================================================"\r    estado1 := partida estadoJugadores first.\r    \r\r    vLabel1 := Ventana new construirLabelConTexto: \'Vidas: \', estado1 vidas asString.\r    pLabel1 := Ventana new construirLabelConTexto: \'Puntos: \', estado1 puntaje asString.\r    \r    panelInfo1 := Morph new color: Color transparent; layoutPolicy: TableLayout new; listDirection: #leftToRight; cellInset: 20.\r    panelInfo1 addMorph: vLabel1; addMorph: pLabel1.\r    panelInfo1 position: 350 @ 10. "Posición normal"\r    mainLayout addMorph: panelInfo1.\r    \r    "2. Dibujamos Pistas J1"\r    self dibujarPistasFilas: 100 tamaño: tamañoCelda enX: 10.\r    self dibujarPistasColumnas: 100 yGrilla: 100 tamaño: tamañoCelda.\r    \r    "3. Dibujamos Grilla J1"\r    1 to: dimension do: [ :y |\r        1 to: dimension do: [ :x |\r            | celda esNegra |\r            esNegra := partida tablero esNegraEnX: x y: y.\r            celda := CeldaMorph new layoutPolicy: nil; hResizing: #rigid; vResizing: #rigid; extent: tamañoCelda @ tamañoCelda.\r            celda setProperty: #punto toValue: (x@y).\r            \r            celda inicializarConSolucion: esNegra yEstado: estado1.\r            \r            "CONEXIÓN J1: Le pasamos SUS etiquetas"\r            celda alHacerClick: [ \r                self actualizarInfoPara: estado1 vidas: vLabel1 puntos: pLabel1 \r            ].\r            \r            celda position: (100 + (x * tamañoCelda)) @ (100 + (y * tamañoCelda)).\r            mainLayout addMorph: celda.\r            celdasMorphs add: celda.\r        ]\r    ].\r\r    "========================================================"\r    " JUGADOR 2 (Solo si existe, se dibuja en X=600) "\r    "========================================================"\r    anchoVentana := 600. "Por defecto ancho 1P"\r    \r    (partida estadoJugadores size > 1) ifTrue: [\r        estado2 := partida estadoJugadores second.\r        anchoVentana := 1200. "Agrandamos ventana"\r        \r        "1. Creamos labels LOCALES para J2"\r\r        vLabel2 := Ventana new construirLabelConTexto: \'Vidas: \', estado2 vidas asString.\r        pLabel2 := Ventana new construirLabelConTexto: \'Puntos: \', estado2 puntaje asString.\r        \r        panelInfo2 := Morph new color: Color transparent; layoutPolicy: TableLayout new; listDirection: #leftToRight; cellInset: 20.\r        panelInfo2 addMorph: vLabel2; addMorph: pLabel2.\r        panelInfo2 position: (350 + 600) @ 10. "OFFSET 600"\r        mainLayout addMorph: panelInfo2.\r        \r        "2. Dibujamos Pistas J2 (Offset 600)"\r        self dibujarPistasFilas: 100 tamaño: tamañoCelda enX: (10 + 600).\r        self dibujarPistasColumnas: (100 + 600) yGrilla: 100 tamaño: tamañoCelda.\r        \r        "3. Dibujamos Grilla J2"\r        1 to: dimension do: [ :y |\r            1 to: dimension do: [ :x |\r                | celda esNegra |\r                esNegra := partida tablero esNegraEnX: x y: y.\r                celda := CeldaMorph new layoutPolicy: nil; hResizing: #rigid; vResizing: #rigid; extent: tamañoCelda @ tamañoCelda.\r                celda setProperty: #punto toValue: (x@y).\r                \r                celda inicializarConSolucion: esNegra yEstado: estado2.\r                \r                "CONEXIÓN J2: Le pasamos SUS etiquetas"\r                celda alHacerClick: [ \r                    self actualizarInfoPara: estado2 vidas: vLabel2 puntos: pLabel2 \r                ].\r                \r                "Posición con Offset 600"\r                celda position: ((100 + 600) + (x * tamañoCelda)) @ (100 + (y * tamañoCelda)).\r                mainLayout addMorph: celda.\r                celdasMorphs add: celda.\r            ]\r        ].\r    ].\r\r    "Ajustamos ventana"\r    window extent: anchoVentana @ 600.\r    window position: 50 @ 50.\r"========================================================"\r    " AJUSTE FINAL DE VENTANA "\r    "========================================================"\r    \r    "Calculamos el tamaño necesario"\r    (partida estadoJugadores size > 1) \r        ifTrue: [ \r            "Mucha anchura para 2 jugadores"\r            anchoVentana := 1300. \r        ]\r        ifFalse: [ \r            "Anchura normal para 1 jugador"\r            anchoVentana := 650. \r        ].\r\r    "Aplicamos el tamaño (700 de alto para que sobre espacio vertical)"\r    window extent: anchoVentana @ 700.\r    \r    "Centramos la ventana en la pantalla"\r    window position: (Display extent - window extent) // 2.',			#stamp : 'Anonymous 11/19/2025 02:27',			#package : #juego-UI		},		#newMethod : RGMethodDefinition {			#annotations : IdentityDictionary {				#className : #VentanaJuego,				#isMetaSide : false			},			#name : #dibujarJuego,			#protocol : #drawing,			#sourceCode : 'dibujarJuego\r    | dimension tamañoCelda estado1 estado2 anchoVentana vLabel1 pLabel1 panelInfo1 vLabel2 pLabel2 panelInfo2|\r    \r    dimension := partida tablero dimension.\r    \r\r    dimension = 5 ifTrue: [ tamañoCelda := 30 ].\r    dimension = 10 ifTrue: [ tamañoCelda := 25 ].\r    dimension = 15 ifTrue: [ tamañoCelda := 20 ].\r\r    estado1 := partida estadoJugadores first.\r    \r\r    vLabel1 := Ventana new construirLabelConTexto: \'Vidas: \', estado1 vidas asString.\r    pLabel1 := Ventana new construirLabelConTexto: \'Puntos: \', estado1 puntaje asString.\r    \r    panelInfo1 := Morph new color: Color transparent; layoutPolicy: TableLayout new; listDirection: #leftToRight; cellInset: 20.\r    panelInfo1 addMorph: vLabel1; addMorph: pLabel1.\r    panelInfo1 position: 350 @ 10. "Posición normal"\r    mainLayout addMorph: panelInfo1.\r    \r\r    self dibujarPistasFilas: 100 tamaño: tamañoCelda enX: 10.\r    self dibujarPistasColumnas: 100 yGrilla: 100 tamaño: tamañoCelda.\r    \r\r    1 to: dimension do: [ :y |\r        1 to: dimension do: [ :x |\r            | celda esNegra |\r            esNegra := partida tablero esNegraEnX: x y: y.\r            celda := CeldaMorph new layoutPolicy: nil; hResizing: #rigid; vResizing: #rigid; extent: tamañoCelda @ tamañoCelda.\r            celda setProperty: #punto toValue: (x@y).\r            \r            celda inicializarConSolucion: esNegra yEstado: estado1.\r            \r\r            celda alHacerClick: [ \r                self actualizarInfoPara: estado1 vidas: vLabel1 puntos: pLabel1 \r            ].\r            \r            celda position: (100 + (x * tamañoCelda)) @ (100 + (y * tamañoCelda)).\r            mainLayout addMorph: celda.\r            celdasMorphs add: celda.\r        ]\r    ].\r\r\r    anchoVentana := 600. \r    \r    (partida estadoJugadores size > 1) ifTrue: [\r        estado2 := partida estadoJugadores second.\r        anchoVentana := 1200. \r        \r\r\r        vLabel2 := Ventana new construirLabelConTexto: \'Vidas: \', estado2 vidas asString.\r        pLabel2 := Ventana new construirLabelConTexto: \'Puntos: \', estado2 puntaje asString.\r        \r        panelInfo2 := Morph new color: Color transparent; layoutPolicy: TableLayout new; listDirection: #leftToRight; cellInset: 20.\r        panelInfo2 addMorph: vLabel2; addMorph: pLabel2.\r        panelInfo2 position: (350 + 600) @ 10. \r        mainLayout addMorph: panelInfo2.\r        \r       \r        self dibujarPistasFilas: 100 tamaño: tamañoCelda enX: (10 + 600).\r        self dibujarPistasColumnas: (100 + 600) yGrilla: 100 tamaño: tamañoCelda.\r \r        1 to: dimension do: [ :y |\r            1 to: dimension do: [ :x |\r                | celda esNegra |\r                esNegra := partida tablero esNegraEnX: x y: y.\r                celda := CeldaMorph new layoutPolicy: nil; hResizing: #rigid; vResizing: #rigid; extent: tamañoCelda @ tamañoCelda.\r                celda setProperty: #punto toValue: (x@y).\r                \r                celda inicializarConSolucion: esNegra yEstado: estado2.\r                \r\r                celda alHacerClick: [ \r                    self actualizarInfoPara: estado2 vidas: vLabel2 puntos: pLabel2 \r                ].\r\r                celda position: ((100 + 600) + (x * tamañoCelda)) @ (100 + (y * tamañoCelda)).\r                mainLayout addMorph: celda.\r                celdasMorphs add: celda.\r            ]\r        ].\r    ].\r\r\r    window extent: anchoVentana @ 600.\r    window position: 50 @ 50.\r\r    \r\r    (partida estadoJugadores size > 1) \r        ifTrue: [ \r            \r            anchoVentana := 1300. \r        ]\r        ifFalse: [ \r            \r            anchoVentana := 650. \r        ].\r\r  \r    window extent: anchoVentana @ 700.\r\r    window position: (Display extent - window extent) // 2.',			#stamp : 'Anonymous 11/19/2025 20:07',			#package : #juego-UI		}	}}